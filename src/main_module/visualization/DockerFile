# ---- Dev stage (used by docker-compose) ----
FROM node:22-alpine AS dev

WORKDIR /app
COPY package.json ./
RUN npm install --legacy-peer-deps
COPY . .
EXPOSE 5173
CMD ["npm", "run", "dev"]

# ---- Build stage ----
FROM dev AS build
RUN npm run build

# ---- Production stage ----
FROM nginx:alpine AS production
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]